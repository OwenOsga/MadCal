<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/the_task"
            android:layout_width="0dp"
            android:layout_height="114dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="76dp"
            android:ems="10"
            android:hint="Enter task here"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/tasktext"
            app:layout_constraintStart_toStartOf="@+id/tasktext"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tasktext"
            android:layout_width="329dp"
            android:layout_height="39dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:text="Add Task/Assignment:"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/the_task"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/duetext"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="21dp"
            android:text="Enter due date/time:"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/the_year"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/the_task" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="79dp"
            android:text="Month"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/the_month" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="102dp"
            android:text="Year"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duetext" />

        <EditText
            android:id="@+id/the_hour"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/save_button"
            app:layout_constraintStart_toStartOf="@+id/the_month" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="225dp"
            android:text=":"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/save_button" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="131dp"
            android:layout_height="53dp"
            android:layout_marginTop="135dp"
            android:layout_marginBottom="134dp"
            android:text="Save Task"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/the_day" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="1dp"
            android:text="Day"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/the_day"
            app:layout_constraintTop_toBottomOf="@+id/duetext" />

        <EditText
            android:id="@+id/the_month"
            android:layout_width="66dp"
            android:layout_height="0dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="2dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/the_day"
            app:layout_constraintEnd_toStartOf="@+id/the_minute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="7dp"
            android:text="Hour"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/the_hour"
            app:layout_constraintStart_toStartOf="@+id/the_hour" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:text="/"
            android:textSize="30sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/the_day"
            app:layout_constraintEnd_toStartOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:text="/"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/the_year"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="7dp"
            android:text="Minute"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/the_minute"
            app:layout_constraintStart_toStartOf="@+id/the_minute" />

        <EditText
            android:id="@+id/the_day"
            android:layout_width="66dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="97dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/the_minute"
            app:layout_constraintStart_toEndOf="@+id/the_hour"
            app:layout_constraintTop_toBottomOf="@+id/the_task" />

        <EditText
            android:id="@+id/the_year"
            android:layout_width="66dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/the_day"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:text="AM"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/dotSelectionGroup"
            app:layout_constraintStart_toStartOf="@+id/dotSelectionGroup" />

        <RadioGroup
            android:id="@+id/dotSelectionGroup"
            android:layout_width="93dp"
            android:layout_height="59dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/save_button"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2">

            <RadioButton
                android:id="@+id/am_dot"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/black"
                android:buttonTint="@android:color/black" />

            <RadioButton
                android:id="@+id/pm_dot"
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/black"
                android:buttonTint="@android:color/black" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="62dp"
            android:text="PM"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/the_task"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/the_year" />

        <EditText
            android:id="@+id/the_minute"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="3dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/dotSelectionGroup"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/dotSelectionGroup" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>